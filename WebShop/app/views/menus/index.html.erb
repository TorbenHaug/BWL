%>
<% def generate_menu(id)
     accu = ""
     menus = get_menu(id)
     if !menus.empty?
       menus.each{ |entry|
         accu += "<li >" +
                 entry.name + " " +
                 link_to('Edit', edit_menu_path(entry)).to_s + " " +
         link_to('Destroy', entry, method: :delete, data: { confirm: 'Sind Sie sicher?' }).to_s + "</li>"
         sub_menus = generate_menu(entry.id)
         if not(sub_menus.empty?)
           accu += sub_menus
         end
       }
     end
     if !accu.empty?
       "<ul>" + accu + "</ul>"
     else
       ""
     end

   end %>

