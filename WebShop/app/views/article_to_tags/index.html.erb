<div class="post">
<h1>Listing article_to_tags</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @article_to_tags.each do |article_to_tag| %>
      <tr>
