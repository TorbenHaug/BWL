<h1>Artikel</h1>
<br/><br/>

<div class="post">
    <% selected_articles = @articles.select{|item| admin_user? || item.deleted_at.nil?} %> 
    <% selected_articles.each_with_index do |article, index| %>
        <p style="min-height: 150px;">
            <span style="margin-right: 30px; float: left; width: 150px; text-align: center;"><%= image_tag article.photo.url(:small) %></span>
            <%= link_to article.name, article %><br/>
            <strong>Preis:</strong>
            <%= float_to_euro_string(article.price) %>
            
            <% if (admin_user?) %>
                <br/>
                <%= link_to 'Bearbeiten', edit_article_path(article) %> | 
                <%= link_to 'LÃ¶schen', article, method: :delete, data: { confirm: 'Sind Sie sicher?' } %>
            <% end %>
        </p>
        <% if (index != selected_articles.size - 1) %>
            <hr style="display: block; height:1px; border:none; color:#333; background-color:#333;"/>
        <% end %>
    <% end %>
    
    <br/>
    
    <% if (admin_user?) %>
    <%= link_to 'Neuer Artikel', new_article_path %>
    <% end %>
</div>