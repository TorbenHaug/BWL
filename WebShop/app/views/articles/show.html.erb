<h1 style="margin-bottom: 40px;"><%= @article.name %></h1>

<div class="post">
    <p>
      <strong>Name:</strong>
      <%= @article.name %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @article.description %>
    </p>

    <p>
      <strong>Price:</strong>
      <%= @article.price %>
    </p>

    <p>
      <strong>Deleted at:</strong>
      <%= @article.deleted_at %>
    </p>
    
    <% if ("ADMIN" == "ADMIN") %>
      <%= link_to 'Edit', edit_article_path(@article) %> |
      <%= link_to 'Back', articles_path %>
    <% end %>
</div>
