<div id="banner-wrapper"></div>
<div id="header-wrapper">
  <div id="header" class="container">
    <div id="logo">
      <%= form_tag(search_path , method: "get") do %>
          <%= text_field_tag :q, '', size: 44 %>
          &nbsp;&nbsp;
          <%= submit_tag("Suche") %>
      <% end %>
    </div>
    <div id="menu">
      <ul>
        <li><%= link_to "Home",   :root %></li>
        <li><%= link_to "Warenkorb",   '#' %></li>
        <% if logged_in? %>
            <li>
              <% if admin_user? %>
                  <%= link_to "Admin",   '#' %>
              <% end %>
            </li>
            <li>
              <%= link_to "Logout(" + current_user.firstname + " " + current_user.lastname + ")", :logout, method: "delete" %>
            </li>
        <% else %>
            <li><%= link_to "Sign Up",   :signup %></li>
            <li><%= link_to "Login",   :login %></li>
        <% end %>

      </ul>
    </div>
  </div>
</div>